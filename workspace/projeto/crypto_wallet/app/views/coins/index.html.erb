<p style="color: green"><%= notice %></p>

<% content_for :title, "Coins" %>

<h1><%=Coin.model_name.human(count: @coins.count)%></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 35, height: 35 %></td>
        <td><%= link_to t("links.show"), coin, class:"btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('links.new'), new_coin_path, class:"btn btn-primary" %>
