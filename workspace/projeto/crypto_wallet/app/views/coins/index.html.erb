<p style="color: green"><%= notice %></p>

<% content_for :title, "Coins" %>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 35, height: 35 %></td>
        <td><%= link_to "Show this coin", coin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New coin", new_coin_path %>
